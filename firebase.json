{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/getTodo",
        "function": "getTodo"
      },
      {
        "source": "/api/addTodo",
        "function": "addTodo"
      },
      {
        "source": "/api/deleteTodo",
        "function": "deleteTodo"
      },
      { "source": "**", "destination": "/index.html" }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
