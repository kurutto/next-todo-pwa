{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"], // ルートの型定義を拾わないようにする
    "types": ["node"], // 無関係な型が入らないようにする
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
